<Window x:Class="DesktopApp.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Оплата заказа" Height="450" Width="800" Background="Black">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="235" Margin="0,61,0,0" Stroke="White" VerticalAlignment="Top" Width="548"/>
        <TextBox x:Name="numCard" HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" MaxLength="16" VerticalAlignment="Top" Width="484" Height="32"/>
        <TextBox x:Name="date" HorizontalAlignment="Left" Margin="158,217,0,0" TextWrapping="Wrap" MaxLength="5"  VerticalAlignment="Top" Width="115" Height="32"/>
        <TextBox x:Name="cvc" HorizontalAlignment="Left" Margin="527,217,0,0" TextWrapping="Wrap" MaxLength="3" VerticalAlignment="Top" Width="115" Height="32"/>
        <Button x:Name="payment" Content="Произвести оплату" HorizontalAlignment="Center" Margin="0,352,0,0" VerticalAlignment="Top" Height="44" Width="224" Click="payment_Click"/>
    </Grid>
</Window>
